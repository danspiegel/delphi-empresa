  tbtnGravarCadastroFornecedor.Enabled:= true;
  tbtnCancelarCadastroFornecedor.Enabled:= true;
  tbtnExcluirCadastroFornecedor.Enabled:= false;
  tbtnLocalizar.Enabled:= false;
  tbtnListagemFornecedores.Enabled:= false;
end;

